{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "isolatedModules": false,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "outDir": "exports/cjs",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "./lib/**/*.ts"
  ],
  "files": [
    "./lib/index.ts",
    "./lib/interfaces.ts",
    "./lib/queues/element.ts",
    "./lib/queues/queue.ts",
    "./lib/queues/raf-queue.ts",
    "./lib/streams/frame.ts",
    "./lib/streams/streams.ts",
    "./lib/streams/stream.ts",
    "./lib/window-proxy.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "compileOnSave": false
}
